{
  "name": "template-ts",
  "version": "1.0.0",
  "description": "example template for ts project",
  "author": "chetzof @chetzof",
  "prettier": "chetzof-lint-config/prettier/.prettierrc.js",
  "homepage": "https://github.com/chetzof/template-ts",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chetzof/template-ts.git"
  },
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "collections-deep-equal": "^3.0.1",
    "lodash.isplainobject": "^4.0.6",
    "p-debounce": "^4.0.0",
    "p-defer": "^4.0.0"
  },
  "devDependencies": {
    "p-state": "^1.0.0",
    "@types/lodash": "^4.14.192",
    "chetzof-lint-config": "^1.0.14",
    "eslint-define-config": "^1.17.0",
    "husky": "^8.0.3",
    "semantic-release": "^21.0.1",
    "tsc-alias": "1.8.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.3",
    "vite-tsconfig-paths": "^4.0.8",
    "vitest": "0.29.8",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "clean && npm-run-all --parallel build:node:esm build:node:cjs build:browser:cjs",
    "build:node:esm": "rm -rf ./dist/esm && tsc -p ./tsconfig.node.esm.json && tsc-alias --verbose -p tsconfig.node.esm.json && mv dist/esm/index.js dist/esm/index.mjs",
    "build:old": "rm -rf ./dist && tsc -p ./tsconfig.production.json && tsc-alias --debug -p tsconfig.production.json",
    "build:node:cjs": "rm -rf ./dist/cjs && tsc -p ./tsconfig.node.cjs.json && tsc-alias -p tsconfig.node.cjs.json",
    "build:browser:cjs": "rm -rf ./dist/browser && tsc -p ./tsconfig.browser.cjs.json && tsc-alias -p tsconfig.browser.cjs.json",
    "alias": "tsc-alias --debug -p  tsconfig.production.json",
    "watch": "tsc -w -p tsconfig.production.json",
    "lint": "npm run lint:tsc; npm run lint:eslint",
    "fix": "npm run fix:prettier . && npm run fix:eslint .",
    "fix:prettier": "prettier --write --ignore-unknown",
    "fix:eslint": "NODE_ENV=production  eslint --fix",
    "lint:eslint": "NODE_ENV=production  eslint .",
    "lint:tsc": "tsc --noEmit -p tsconfig.production.json",
    "prepack": "npm run build",
    "test": "vitest",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "lint-staged:test": "vitest related --run"
  },
  "engines": {
    "node": ">=16"
  },
  "types": "dist/index.d.ts",
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
